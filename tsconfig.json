{
	"compilerOptions": {
		"lib": ["ES2019", "ES2020.Promise", "ES2020.BigInt", "ES2020.String"],
		"target": "ES2019",
		"module": "ESNext",
		"moduleResolution": "Node",

		"strict": true,
		"alwaysStrict": true,

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,

		"declaration": true,
		"stripInternal": true,
		"sourceMap": false,

		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,

		"forceConsistentCasingInFileNames": true,

		"outDir": "lib"
	},

	"include": ["src/**/*"]
}
